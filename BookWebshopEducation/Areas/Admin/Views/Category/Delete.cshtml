@model Category

<div class="card shadow border-0 mt-4" style="background-color: #303841; border-radius: 15px">
    <div class="card-header m-lg-0 py-3" style="background-color: #fd0054; border-radius: 15px">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2" style="color: #303841; font-weight: bold">
                    Delete Category
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4" style="background-color: #303841;">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                <p style="color:  #fd0054">
                    <span style="font-weight: bold">Name:</span>
                    @Model.Name
                </p>
                <hr style="border-color: #fd0054" />
                <p style="color:  #fd0054">
                    <span style="font-weight: bold">DisplayOrder:</span>
                    @Model.DisplayOrder
                </p>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn form-control" style="background-color: #fd0054">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn border form-control" style="color: #fbf9fa">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
