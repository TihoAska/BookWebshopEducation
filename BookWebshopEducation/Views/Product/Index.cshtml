@model List<Product>;

<div class="card shadow border-0 mt-4" style="background-color:  #303841; border-radius: 15px">
    <div class="card-header m-lg-0 py-3" style="background-color: #fd0054; border-radius: 15px">
        <div class="row">
            <div class="col-12 text-center" style="background-color: #fd0054">
                <h2 class="py-2" style="color: #303841; font-weight: bold">
                    PRODUCTS
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4" style="background-color:  #303841">
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-light">
                    <i class="bi bi-plus-circle"></i> Create New Product
                </a>
            </div>
        </div>
        <div class="row">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th style="background-color:  #303841; color: #fd0054; font-weight: bold; font-size: 20px; text-align: center">PRODUCT</th>
                        <th style="background-color:  #303841; color: #fd0054; font-weight: bold; font-size: 20px; text-align: center">PRICE</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td style="background-color:  #303841; color: #fd0054; font-weight: bold">@product.Name</td>
                            <td style="background-color:  #303841; color: #fd0054; font-weight: bold; text-align: right">@product.Price</td>
                            <td style="background-color:  #303841; text-align: center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Product" asp-action="Edit" asp-route-productId="@product.Id" class="btn btn-light mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-productId="@product.Id" class="btn mx-2" style="background-color: #fd0054">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

